<hr>
<div class="container">
  <h3>Would you rather:</h3>
  <div class="row">

    <div class="col-sm-4">
      <h3><%= question.option1 %></h3>
      <br>

      <% if current_user %>
        <% vote = Vote.find_by(user: current_user, question: question) %>
        <% if vote == nil %>
          <%= form_tag("/questions/#{question.id}/votes", method: "post", remote: true) do %>
          <%= hidden_field_tag(:selected, value="option1") %>
          <%= submit_tag question.option1, :class => "#{question.id}_button" %>
          <% end %>
        <% end %>

      <% end %>
    </div>

    <div class="col-sm-4">
      <div class="question_<%= question.id %>">
        <% if current_user %>
          <% vote = Vote.find_by(user: current_user, question: question) %>
            <% if vote =! nil %>
              <% allvotes = question.votes %>
              <p><%= question.option1 %>: <%= allvotes.where(:option1 => true).length %></p>
              <p><%= question.option2 %>: <%= allvotes.where(:option2 => true).length %></p>
            <% end %>
        <% end %>
      </div>
    </div>

    <div class="col-sm-4">
      <h3><%= question.option2 %></h3>
      <br>
      <% allvotes = question.votes %>

      <% if current_user %>
        <% vote = Vote.find_by(user: current_user, question: question) %>
        <% if vote == nil %>

          <%= form_tag("/questions/#{question.id}/votes", method: "post", remote: true) do %>
          <%= hidden_field_tag(:selected, value="option2") %>
          <%= submit_tag question.option2, :class => "#{question.id}_button" %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
